{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://todo-app-t1g9.onrender.com/api",
    "VITE_VAPID_PUBLIC_KEY": "BNuHbFjIdpTQdWtJyUygu4u4L0JrlzvfwTLahWBV51qdCs2DyCl_Mo4F_k6hd2wjk0DjKFqlYG69Xy6WzIZJcK4"
  }
}